{
    "manifest_version": 3,
    "version": "0.1",
    "name": "Popmundo Utils",
    "description": "Misc utilities for Popmundo",
    
    "host_permissions": ["https://*.popmundo.com/*"],
    
    "permissions": ["storage"],

    "content_scripts": [
        {
            "matches": [
                "https://*.popmundo.com/World/Popmundo.aspx/City"
            ],
            "js": ["common/xpath-helper.js", "features/open-houses.js"]
        },
        {
            "matches": ["https://*.popmundo.com/*"],
            "js": ["libs/jquery-3.6.1.min.js", "libs/jquery.dataTables.min.js", "common/xpath-helper.js", "features/global-content-script.js"]
        },
        {
            "matches": [
                "https://*.popmundo.com/World/Popmundo.aspx/Character",
                "https://*.popmundo.com/World/Popmundo.aspx/Character/*",
                "https://*.popmundo.com/World/Popmundo.aspx/Artist",
                "https://*.popmundo.com/World/Popmundo.aspx/Artist/*",
                "https://*.popmundo.com/World/Popmundo.aspx/Guide/*",
                "https://*.popmundo.com/World/Popmundo.aspx/Interact/*",
                "https://*.popmundo.com/World/Popmundo.aspx/Locale/*",
                "https://*.popmundo.com/World/Popmundo.aspx/City"
            ],
            "js": ["common/xpath-helper.js", "features/progress-bar-script.js"]
        },
        {
            "matches": [
                "https://*.popmundo.com/World/Popmundo.aspx/Character/Skills/*",
                "https://*.popmundo.com/World/Popmundo.aspx/Character",
                "https://*.popmundo.com/World/Popmundo.aspx/Character/Diary/*",
                "https://*.popmundo.com/World/Popmundo.aspx/Character/ItemDetails/*",
                "https://*.popmundo.com/World/Popmundo.aspx/Help/SkillType/*"
            ],
            "js": ["libs/popper.min.js", "libs/tippy-bundle.umd.min.js", "common/utils.js", "features/skill-popup-script.js"],
            "css": ["features/popup-style.css"]
        },
        {
            "matches": [
                "https://*.popmundo.com/World/Popmundo.aspx/Character/Songs/*",
                "https://*.popmundo.com/World/Popmundo.aspx/Character",
                "https://*.popmundo.com/World/Popmundo.aspx/Character/Diary/*",
                "https://*.popmundo.com/World/Popmundo.aspx/Artist/Repertoire/*"
            ],
            "js": ["libs/popper.min.js", "libs/tippy-bundle.umd.min.js", "common/utils.js", "features/song-popup-script.js"],
            "css": ["features/popup-style.css"]
        },
        {
            "matches": [
                "https://*.popmundo.com/World/Popmundo.aspx/Character",
                "https://*.popmundo.com/World/Popmundo.aspx/Character/*",
                "https://*.popmundo.com/World/Popmundo.aspx/Character/Diary/*",
                "https://*.popmundo.com/World/Popmundo.aspx/Artist",
                "https://*.popmundo.com/World/Popmundo.aspx/Artist/*",
                "https://*.popmundo.com/World/Popmundo.aspx/Character/Song/*",
                "https://*.popmundo.com/World/Popmundo.aspx/Character/Song/*",
                "https://*.popmundo.com/World/Popmundo.aspx/Locale/*"
            ],
            "js": ["common/xpath-helper.js", "common/color.js", "features/scoring-script.js"]
        },
        {
            "matches": [
                "https://*.popmundo.com/Default.aspx*"
            ],
            "js": ["common/notifications.js", "features/login-redirect.js"]
        },
        {
            "matches": [
                "https://*.popmundo.com/World/Popmundo.aspx/Character"
            ],
            "js": ["common/utils.js", "common/notifications.js", "features/reminders-script.js"]
        },
        {
            "matches": [
                "https://*.popmundo.com/World/Popmundo.aspx/Character/ItemDetails/*"
            ],
            "js": ["common/utils.js", "common/xpath-helper.js", "common/notifications.js", "features/item-timers.js"]
        },
        {
            "matches": [
                "https://*.popmundo.com/World/Popmundo.aspx/Character/Relations/*"
            ],
            "js": ["common/utils.js", "common/xpath-helper.js", "common/notifications.js", "features/call-all-friends.js"]
        },
        {
            "matches": [
                "https://*.popmundo.com/World/Popmundo.aspx/Locale/CharactersPresent/*"
            ],
            "js": ["common/utils.js", "common/xpath-helper.js", "features/mass-interact.js"]
        },
        {
            "matches": [
                "https://*.popmundo.com/World/Popmundo.aspx/Character/Relations/*",
                "https://*.popmundo.com/World/Popmundo.aspx/Character"
            ],
            "js": ["libs/popper.min.js", "libs/tippy-bundle.umd.min.js", "common/utils.js", "common/xpath-helper.js", "features/character-popup.js"]
        }
    ],

    "web_accessible_resources": [
        {
            "resources": [ "/images/*" ],
            "matches": [ "https://*.popmundo.com/*" ]
        },
        {
            "resources": [ "/injected-js/reminders-injected.js" ],
            "matches": [ "https://*.popmundo.com/*" ]
        }
    ],

    "options_page": "options/options.html"
}